{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/assets/(.*)", "headers": { "Cache-Control": "public, max-age=31536000" }, "continue": true },
    { "src": "/(.*)", "dest": "/index.html" }
  ],
  "env": {
    "NODE_VERSION": "20",
    "NPM_FLAGS": "--legacy-peer-deps",
    "VITE_API_BASE": "https://api.trs-alliance.com"
  }
}
