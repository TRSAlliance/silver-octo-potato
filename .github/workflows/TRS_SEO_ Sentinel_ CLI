 name: TRS SEO Sentinel CLI Deploy

on:
  workflow_dispatch:    # manual trigger allowed
  push:
    branches:
      - main

jobs:
  seo-scan:
    name: DeepSeek SEO Validation
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ”„ Checkout Code
        uses: actions/checkout@v3

      - name: ğŸ§° Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '20'
          cache: 'npm'

      - name: ğŸ“¦ Install Dependencies
        run: npm ci

      - name: ğŸ” Run SEO Validation
        run: node cli/index.js seo --agent=deepseek --target=meta

      - name: ğŸ“ Upload Audit Report (Optional)
        if: success() || failure()
        uses: actions/upload-artifact@v3
        with:
          name: trs-seo-report
          path: output/seo-report.json

      - name: ğŸ›¡ï¸ Trigger Chainsaw Alert (If Failed)
        if: failure()
        run: |
          echo "SEO Audit failed â€” potential metadata gap or cloaking attempt."
          echo "::warning file=cli/index.js::TRS SEO audit flagged inconsistencies. Review chainsaw.json integrity."

      - name: ğŸ“¡ Trigger Permaweb Sync
        if: success()
        uses: benc-uk/workflow-dispatch@v1
        with:
          workflow: 'TRS Permaweb Sync'
          repo: TRSAlliance/trs-permaweb-cookbook
          token: ${{ secrets.TRIGGER_TOKEN }}
